{
  "name": "@oz/libav",
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/index.js",
  "appModern": "dist/index.html",
  "targets": {
    "appModern": {
      "engines": {
        "browsers": [
          "last 1 chrome version"
        ]
      }
    }
  },
  "scripts": {
    "build": "npm run make-docker && npm run build-web",
    "build-web": "npx tsc src/index.ts --outDir dist",
    "dev": "concurrently \"npm run dev-wasm\" \"npm run dev-web\"",
    "dev-web": "parcel src/index.html",
    "dev-wasm": "nodemon -e cpp --exec \"npm run make-docker\"",
    "make-docker": "docker-compose run libav-wasm make"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "nodemon": "^2.0.7",
    "parcel": "^2.0.0-nightly.642",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "mp4box": "^0.4.1"
  }
}

{
  "name": "@banou26/oz-libav",
  "version": "0.1.6",
  "main": "build/index.js",
  "files": [
    "build"
  ],
  "types": "build/index.d.ts",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev-wasm\" \"npm run dev-web\"",
    "dev-wasm": "nodemon -e cpp --exec \"npm run make-docker\"",
    "make-docker": "docker-compose run libav-wasm make",
    "dev-web": "vite --port 1234",
    "vite-build": "vite build",
    "build": "npm run copy-package && npm run make-docker && vite build && npm run types && npm run copy-wasm",
    "types": "tsc",
    "copy-package": "copyfiles -u 2 ./src/build-config/package.json dist",
    "copy-wasm": "copyfiles -u 1 dist/*.wasm build && shx mv ./build/index2.js ./build/worker.js && shx mv ./build/worker/index.d.ts ./build/worker.d.ts",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@esbuild-plugins/node-modules-polyfill": "^0.1.4",
    "concurrently": "^6.0.0",
    "copyfiles": "^2.4.1",
    "mp4box": "^0.5.2",
    "nodemon": "^2.0.7",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "shx": "^0.3.4",
    "typescript": "^4.8.4",
    "vite": "^3.1.8",
    "vite-plugin-wasm": "^3.1.0"
  },
  "dependencies": {
    "libav": "file:dist",
    "osra": "^0.0.8",
    "p-queue": "^7.3.0"
  }
}

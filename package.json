{
  "name": "@banou26/oz-libav",
  "version": "0.0.1",
  "main": "dist/index.js",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev-wasm\" \"npm run dev-web\"",
    "dev-wasm": "nodemon -e cpp --exec \"npm run make-docker\"",
    "make-docker": "docker-compose run libav-wasm make",
    "dev-web": "vite --port 1234",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "flatbuffers": "flatc.exe -o src --ts src/shared-buffer.fbs",
    "proto": "buf-Windows-x86_64.exe generate"
  },
  "_scripts": {
    "build": "npx --yes make-dir-cli ./dist && npm run make-docker && npm run build-web",
    "build-web": "npx tsc src/index.ts --outDir dist",
    "dev": "concurrently \"npm run dev-wasm\" \"npm run dev-web\"",
    "dev-web": "parcel src/index.html",
    "dev-wasm": "nodemon -e cpp --exec \"npm run make-docker\"",
    "make-docker": "docker-compose run libav-wasm make"
  },
  "devDependencies": {
    "@bufbuild/protoc-gen-es": "^0.2.1",
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@esbuild-plugins/node-modules-polyfill": "^0.1.4",
    "concurrently": "^6.0.0",
    "mp4box": "^0.5.2",
    "nodemon": "^2.0.7",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "typescript": "^4.8.4",
    "vite": "^3.1.8",
    "vite-plugin-wasm": "^3.1.0"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^0.2.1",
    "libav": "file:dist",
    "osra": "^0.0.8",
    "p-queue": "^7.3.0"
  }
}

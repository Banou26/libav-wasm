{
  "name": "oz-libav",
  "version": "0.0.1",
  "license": "MIT",
  "appModern": "dist/index.html",
  "targets": {
    "appModern": {
      "engines": {
        "browsers": [
          "last 1 chrome version"
        ]
      }
    }
  },
  "scripts": {
    "dev": "concurrently \"yarn dev-wasm\" \"yarn dev-web\"",
    "dev-web": "parcel src/index.html",
    "dev-wasm": "nodemon -e cpp --exec \"yarn make-docker\"",
    "dev-wasm-build": "cd ../emsdk && emsdk_env.bat && cd ../libav && emcc src/main.cpp -o dist/libav.js -s MODULARIZE=1 -s INITIAL_MEMORY=268435456",
    "make-docker": "docker-compose run ffprobe-wasm make"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "nodemon": "^2.0.7",
    "parcel": "2.0.0-nightly.500"
  }
}

namespace Transmuxer;
 
enum Operation:byte {
  Seek = 0,
  Read = 1
}

table Interface {
  state: int32;
  operation: Operation;
  
  // argument types
  // seek
  arg_offset: long;
  arg_whence: int;
  // read
  arg_buffer_size: int;

  // return types
  // read
  buffer: [uint8];
  // seek
  offset: long;
}

root_type Interface;

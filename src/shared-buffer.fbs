namespace Transmuxer;
 
enum Operation:byte {
  Idle = 0,
  Seek = 1,
  Read = 2
}

enum State:byte {
  Idle = 0,
  Requested = 1,
  Responded = 2
}

table Interface {
  state: State;
  operation: Operation;
  
  // argument types
  // seek
  arg_offset: long;
  arg_whence: int;
  // read
  arg_buffer_size: int;

  // return types
  // read
  buffer: [uint8];
  // seek
  offset: long;
}

root_type Interface;
